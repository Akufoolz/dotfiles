general {
        colors = true
        interval = 1
		
		color = '#f8f8f2'
		color_good = '#bd93f9'
		color_bad = '#ff79c6'
		color_degraded = '#6272a4'
}

# order += "wifi"
# order += "ethernet _first_"
order += "online_status"
order += "battery_level"
order += "disk /"
order += "backlight"
order += "volume_status"
order += "air_quality"
order += "clock"

disk "/" {
        format = "%avail"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

air_quality {
    auth_token = "0375cce3598c9170c7cfabf9a74022e9cc763e64"
    location = "@8194"
}

battery all {
        # format = "%status %percentage %remaining"
        format = "%status %percentage"
}

battery_level {

        format = 'BAT: {percent} %'
		color_good = '#bd93f9'
		color_bad = '#ff79c6'
		color_degraded = '#6272a4'
		color_charging = '#8be9fd'
}

load {
        format = "%1min"
}

